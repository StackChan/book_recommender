@model recommender.Models.User

@{
    ViewData["Title"] = "RecommendedBookIndex";
}

<h3>Recommended Books for You</h3>
<p>
    @Html.ActionLink(
            linkText: "Back to your the list of books you rated",
            actionName: "SetUser",
            controllerName: "Home",
            routeValues: new { user_id = Model.user_id },
            htmlAttributes: null
        )
</p>

<table class="table">
    <thead>
        <tr>
            <th>Book(s)</th>
            <th>Average Rating</th>
            <th>Ratings Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.recommended_books) {
        <tr>
            <td>
                @item.ToString()
                | <a asp-controller="Home" asp-action="Details" asp-route-id="@item.id">Details</a>
            </td>
            <td>
                @item.average_rating
            </td>
            <td>
                @item.ratings_count
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Rate</a>
            </td>
        </tr>
}
    </tbody>
</table>